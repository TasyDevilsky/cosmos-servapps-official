{
    "cosmos-installer": {},
    "minVersion": "0.15.6",
    "services": {
      "{ServiceName}": {
        "image": "ghcr.io/meshtastic/web:latest",
        "container_name": "{ServiceName}",
        "restart": "unless-stopped",
        "labels": {
          "cosmos-force-network-secured": "true",
          "cosmos-auto-update": "true",
          "cosmos-icon": "https://azukaar.github.io/cosmos-servapps-official/servapps/Meshtastic-client/icon.png"
        },
        "routes": [
          {
            "name": "{ServiceName}",
            "description": "Expose {ServiceName} to the web",
            "useHost": true,
            "target": "http://{ServiceName}:8443",
            "mode": "SERVAPP",
            "Timeout": 14400000,
            "ThrottlePerMinute": 12000,
            "BlockCommonBots": true,
            "SmartShield": {
              "Enabled": true
            }
          }
        ]
      }
    }
  }
  